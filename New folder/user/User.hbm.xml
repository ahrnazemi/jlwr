<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="ir.viratech.tdms.model.user">

	<class name="User" table="USERS" schema="tdms">
		<id name="id" type="java.lang.Long">
			<generator class="increment" />
		</id>
		
		<property name="extuid" type="string" not-null="true" unique="true" >
			<!-- meta attribute="property-type">java.util.UUID</meta-->
			<meta attribute="alternate-key">true</meta>
		</property>
		
		<!--  This config used in projects which authUser is stored in another server
		<property name="authExtuid" type="string" unique="true" />
		<property name="cachedUsername" type="string" unique="false" />
		<property name="legacyPassword" type="string" />
		 -->
		<many-to-one name="authUser" 
				class="ir.viratech.commons.user_management.user.AuthUser" 
				column="authUserId" unique="true" not-null="true" 
				cascade="all" lazy="false" />
		
		<property name="enabled" type="boolean" not-null="true">
			<column name="enabled" default="true" not-null="true" />
		</property>

		<set name="roles" table="USER_ROLES" lazy="false" schema="tdms">
			<key column="userId" />
			<many-to-many column="roleId" class="ir.viratech.tdms.model.user.role.UserRole" />
		</set>
		
	</class>

</hibernate-mapping>
