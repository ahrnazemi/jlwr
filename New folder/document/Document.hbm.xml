<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="ir.viratech.tdms.model.document">

	<class name="Document" table="Document" schema="tdms">
		<id name="id" type="long">
			<generator class="increment" />
		</id>
		
		
		<property name="extuid" type="string" not-null="true" unique="true" >
			<meta attribute="alternate-key">true</meta>
		</property>
		
		<property name="title" type="string" not-null="true" />
		
		<many-to-one name="documentType" 
			class="ir.viratech.tdms.model.document_type.DocumentType" 
			column="documentTypeId" not-null="true"/>
		
		<many-to-one name="file" 
				class="ir.viratech.tdms.model.file.AbstractFile" 
				column="fileId" not-null="true" 
				cascade="save-update" />
					
		<many-to-one name="folder" 
			class="ir.viratech.tdms.model.folder.Folder" 
			column="folderId" not-null="true"
			cascade="none" />
		<property name="originType" type="string" not-null="true" />
		<property name="isAttached" type="boolean" not-null="true" />
		<property name="fileNumber" type="long" not-null="true" />
		<property name="description" type="string" />		
		<property name="deleted" type="boolean" not-null="true"/>		
		
	</class>

</hibernate-mapping>