<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="ir.viratech.tdms.model.user">

	<class name="Feature" table="FEATURES" schema="tdms">
		<id name="id" type="long">
			<generator class="increment" />
		</id>
		<property name="extuid" type="string" not-null="true" unique="true" >
			<!-- meta attribute="property-type">java.util.UUID</meta-->
			<meta attribute="alternate-key">true</meta>
		</property>		
		<property name="name" type="string" not-null="true" unique="true" />
		<property name="description" type="string" />
		
		<set name="usingRoles" table="ROLE_FEATURES" schema="tdms">
			<key column="featureId" not-null="true"/>
			<many-to-many column="roleId" class="ir.viratech.tdms.model.user.role.Role" />
		</set>
	</class>

</hibernate-mapping>
